---
// Image Modal component
---

<div id="imageModal" class="modal">
	<div class="modal-content">
		<span class="close">&times;</span>
		<img id="modalImage" src="" alt="Grisha" />
	</div>
</div>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const modal = document.getElementById('imageModal');
		const modalImg = document.getElementById('modalImage');
		const closeBtn = document.querySelector('.close');
		const grishaPhoto = document.querySelector('.grisha-photo');
		
		// Open modal when clicking on Grisha's photo
		if (grishaPhoto) {
			grishaPhoto.addEventListener('click', function() {
				modal.style.display = 'block';
				modalImg.src = this.src;
				document.body.style.overflow = 'hidden'; // Prevent scrolling
			});
		}
		
		// Close modal when clicking on X
		if (closeBtn) {
			closeBtn.addEventListener('click', function() {
				modal.style.display = 'none';
				document.body.style.overflow = 'auto'; // Restore scrolling
			});
		}
		
		// Close modal when clicking outside the image
		if (modal) {
			modal.addEventListener('click', function(e) {
				if (e.target === modal) {
					modal.style.display = 'none';
					document.body.style.overflow = 'auto';
				}
			});
		}
		
		// Close modal with Escape key
		document.addEventListener('keydown', function(e) {
			if (e.key === 'Escape' && modal.style.display === 'block') {
				modal.style.display = 'none';
				document.body.style.overflow = 'auto';
			}
		});
	});
</script>

<style>
	.modal {
		display: none;
		position: fixed;
		z-index: 1000;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.9);
		backdrop-filter: blur(5px);
	}

	.modal-content {
		position: relative;
		margin: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: 100%;
	}

	#modalImage {
		max-width: 90%;
		max-height: 90%;
		object-fit: contain;
		border-radius: 10px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
	}

	.close {
		position: absolute;
		top: 20px;
		right: 30px;
		color: #f1f1f1;
		font-size: 40px;
		font-weight: bold;
		cursor: pointer;
		z-index: 1001;
		transition: color 0.3s ease;
	}

	.close:hover,
	.close:focus {
		color: #bbb;
		text-decoration: none;
	}

	/* Make the header photo clickable */
	.grisha-photo {
		cursor: pointer;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.grisha-photo:hover {
		transform: scale(1.05);
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
	}

	/* Mejoras para tablets */
	@media (max-width: 1024px) {
		#modalImage {
			max-width: 92%;
			max-height: 92%;
		}
		
		.close {
			top: 15px;
			right: 25px;
			font-size: 35px;
		}
	}

	/* Mejoras para móviles */
	@media (max-width: 768px) {
		#modalImage {
			max-width: 95%;
			max-height: 95%;
		}
		
		.close {
			top: 10px;
			right: 20px;
			font-size: 30px;
		}
	}

	/* Mejoras para móviles pequeños */
	@media (max-width: 480px) {
		#modalImage {
			max-width: 98%;
			max-height: 98%;
			border-radius: 8px;
		}
		
		.close {
			top: 8px;
			right: 15px;
			font-size: 25px;
		}
	}
</style> 