	.help-data.wallet-address br {
		display: block;
		margin: 2px 0;
		content: "";
	}

	.help-link {
		color: #1565c0;
		font-weight: 600;
		text-decoration: underline;
		word-break: break-all;
		overflow-wrap: break-word;
		word-wrap: break-word;
		display: inline-block;
		max-width: 100%;
	}

