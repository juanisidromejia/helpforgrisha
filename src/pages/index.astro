---
import Header from '../components/Header.astro';
import IntroSection from '../components/IntroSection.astro';
import Updates from '../components/Updates.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/jpeg" href="/favicon.jpeg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<meta name="generator" content={Astro.generator} />
		<title>Help for Grisha</title>
		<!-- SEO Meta Tags -->
		<meta name="description" content="Help Grisha, a child from Ecuador fighting cancer. Support his treatment and family by donating. Every contribution counts!" />
		<meta name="keywords" content="donate, help, child, cancer, Ecuador, fundraising, solidarity, medical, support, charity, Grisha, niño, cáncer, Ecuador, donar, ayuda, solidaridad, recaudación, medicina, caridad" />
		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content="Help for Grisha" />
		<meta property="og:description" content="Help Grisha, a child from Ecuador fighting cancer. Support his treatment and family by donating. Every contribution counts!" />
		<meta property="og:type" content="website" />
		<meta property="og:image" content="/favicon.jpeg" />
		<meta property="og:url" content="https://[YOUR_SITE_URL]" />
		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Help for Grisha" />
		<meta name="twitter:description" content="Help Grisha, a child from Ecuador fighting cancer. Support his treatment and family by donating. Every contribution counts!" />
		<meta name="twitter:image" content="/favicon.jpeg" />
	</head>
	<body>
		<Header />
		<IntroSection />
		<Updates />
		<Footer />
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		line-height: 1.6;
		color: #333;
		overflow-x: hidden;
		width: 100%;
		min-height: 100vh;
	}

	html {
		scroll-behavior: smooth;
	}

	/* Mejoras para móviles */
	@media (max-width: 768px) {
		body {
			font-size: 16px;
		}
		
		/* Prevenir zoom en inputs en iOS */
		input, select, textarea {
			font-size: 16px;
		}
	}

	/* Asegurar que las imágenes sean responsivas */
	img {
		max-width: 100%;
		height: auto;
	}

	/* Mejorar la legibilidad en móviles */
	@media (max-width: 480px) {
		body {
			font-size: 14px;
		}
	}

	/* Forzar el ajuste de texto largo en toda la página */
	* {
		word-break: break-all;
		overflow-wrap: anywhere;
		word-wrap: break-word;
	}

	/* Estilos específicos para direcciones largas */
	.help-data, .wallet-address, .help-link {
		word-break: break-all !important;
		overflow-wrap: anywhere !important;
		word-wrap: break-word !important;
		max-width: 100% !important;
		box-sizing: border-box !important;
	}
</style>
